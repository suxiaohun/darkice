<div id="<%= dom_id post %>">
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>
  <p>
    <strong>Posted:</strong>
    <%= time_tag post.created_at, "data-local": "time-ago" %>
  </p>
  <p>
    <strong>comments:</strong>
    <%= pluralize post.comments.count,"comment" %>
  </p>

  <p>
    <strong>Content:</strong>
    <%= post.content %>
  </p>

</div>
