<table style="align-self: center">
  <tr>
    <td align="center" valign="top" colspan="3">
      <table width="800" cellpadding="0" cellspacing="0" border="0">
        <tbody>
        <tr>
          <td height="1" align="center" valign="top" colspan="3">
            <b><br></b><br>
            <b><%=  @message %></b><br>
          </td>
        </tr>
        <tr>
          <td height="1" align="center" valign="top" colspan="3">
            <br>
          </td>
        </tr>
        <tr>
          <td align="center" valign="top">
            <form action="/register" method="post" style="margin: 0px;">
            <table width="240" cellpadding="5" cellspacing="0" style="border:1px solid #cccccc;">
              <tbody>
              <tr>
                <th align="center" colspan="2">
                  <b><font color="#ffffff">ACCOUNT REGISTRATION</font></b>
                </th>
              </tr>
              <tr>
                <td>Login:</td>
                <td align="right"><input type="text" name="login" style="width: 100; text-align: center;"></td>
              </tr>
              <tr>
                <td>Password:</td>
                <td align="right"><input type="password" name="passwd" style="width: 100; text-align: center;">
                </td>
              </tr>
              <tr>
                <td>E-Mail</td>
                <td align="right">
                  <input type="text" name="mail" value="NOT_NEEDED" style="width: 100; text-align: center;"></td>
              </tr>
              <tr>
                <td align="center" colspan="2">
                  <input type="image" name="submit" src="btn_register.jpg" style="border: 0px;"></td>
              </tr>
              </tbody>
            </table>
            </form>
          </td>

          <td align="center" valign="top">
            <form action="index.jsp?page=account&amp;action=passwd" method="post" style="margin: 0px;">
              <table width="240" cellpadding="5" cellspacing="0" style="border:1px solid #cccccc;">
                <tbody>
                <tr>
                  <th align="center" colspan="2">
                    <b><font color="#ffffff">CHANGE ACCOUNT PASSWORD</font></b>
                  </th>
                </tr>
                <tr>
                  <td>Login:</td>
                  <td align="right"><input type="text" name="getlogin" style="width: 100; text-align: center;"></td>
                </tr>
                <tr>
                  <td>Old Password:</td>
                  <td align="right">
                    <input type="password" name="password_old" style="width: 100; text-align: center;"></td>
                </tr>
                <tr>
                  <td>New Password:</td>
                  <td align="right">
                    <input type="password" name="password_new" style="width: 100; text-align: center;"></td>
                </tr>
                <tr>
                  <td align="center" colspan="2">
                    <input type="image" name="submit" src="btn_change.jpg" style="border: 0px;"></td>
                </tr>
                </tbody>
              </table>
            </form>
          </td>

          <td align="center" valign="top">
            <form action="index.jsp?page=account&amp;action=deluser" method="post" style="margin: 0px;">
              <table width="240" cellpadding="5" cellspacing="0" style="border:1px solid #cccccc;">
                <tbody>
                <tr>
                  <th align="center" colspan="2"><b><font color="#ffffff">DELETE ACCOUNT</font></b></th>
                </tr>
                <tr>
                  <td>Type:</td>
                  <td align="right"><select name="type" style="width: 100; text-align: center;">
                    <option value="id">by ID</option>
                    <option value="login">by Login</option>
                  </select></td>
                </tr>
                <tr>
                  <td>Identifier:</td>
                  <td align="right"><input type="text" name="ident" style="width: 100; text-align: center;"></td>
                </tr>
                <tr>
                  <td>Characters:</td>
                  <td align="right"><select name="character" style="width: 100; text-align: center;">
                    <option value="keep">Keep</option>
                  </select></td>
                </tr>
                <tr>
                  <td align="center" colspan="2">
                    <input type="image" name="submit" src="btn_delete.jpg" style="border: 0px;"></td>
                </tr>
                </tbody>
              </table>
            </form>

          </td>
        </tr>

        <tr>
          <td height="1" colspan="3">
            <br>
          </td>
        </tr>

        <tr>
          <td align="center" valign="top">
            <form action="/grant" method="post" style="margin: 0px;">
              <table width="240" cellpadding="5" cellspacing="0" style="border:1px solid #cccccc;">
                <tbody>
                <tr>
                  <th align="center" colspan="2"><b><font color="#ffffff">GAME MASTER</font></b></th>
                </tr>
                <tr>
                  <td>Type:</td>
                  <td align="right"><select name="type" style="width: 100; text-align: center;">
                    <option value="id">by ID</option>
                    <option value="login">by Login</option>
                  </select></td>
                </tr>
                <tr>
                  <td>Identifier:</td>
                  <td align="right"><input type="text" name="ident" style="width: 100; text-align: center;"></td>
                </tr>
                <tr>
                  <td>Action:</td>
                  <td align="right"><select name="act" style="width: 100; text-align: center;">
                    <option value="add">Grant GM</option>
                    <option value="delete">Deny GM</option>
                  </select></td>
                </tr>
                <tr>
                  <td align="center" colspan="2">
                    <input type="image" name="submit" src="btn_submit.jpg" style="border: 0px;"></td>
                </tr>
                </tbody>
              </table>
            </form>

          </td>

          <td align="center" valign="top">
            <form action="/cubi" method="post" style="margin: 0px;">
              <table width="240" cellpadding="5" cellspacing="0" style="border:1px solid #cccccc;">
                <tbody>
                <tr>
                  <th align="center" colspan="2"><b><font color="#ffffff">CUBI TRANSFER</font></b></th>
                </tr>
                <tr>
                  <td>Type:</td>
                  <td align="right"><select name="type" style="width: 100; text-align: center;">
                    <option value="id">by ID</option>
                    <option value="login">by Login</option>
                  </select></td>
                </tr>
                <tr>
                  <td>Identifier:</td>
                  <td align="right"><input type="text" name="ident" style="width: 100; text-align: center;"></td>
                </tr>
                <tr>
                  <td>Amount:</td>
                  <td align="right"><input type="text" name="amount" style="width: 100; text-align: center;"></td>
                </tr>
                <tr>
                  <td align="center" colspan="2">
                    <input type="image" name="submit" src="btn_submit.jpg" style="border: 0px;"></td>
                </tr>
                </tbody>
              </table>
            </form>

          </td>

          <td align="center" valign="top">
            <table cellpadding="0" cellspacing="0" style="border:1px solid #cccccc;">
              <tbody>
              <tr>
                <th height="1" align="center" colspan="3" style="padding: 5;">
                  <b><font color="#ffffff">BROWSE ACCOUNTS</font></b></th>
              </tr>
              <tr bgcolor="f0f0f0">
                <td align="center" style="border-bottom: 1px solid #cccccc;"><b>ID</b></td>
                <td align="center" style="border-bottom: 1px solid #cccccc;"><b>Name</b></td>
                <td align="center" style="border-bottom: 1px solid #cccccc;"><b>Creation Time</b></td>
              </tr>
              <tr>
                <td colspan="3">
                  <div style="width: 240px; height: 96px; overflow: auto;">
                    <table width="100%" cellpadding="3" cellspacing="0" style="border:0px solid #cccccc;">
                      <tbody>
                      <%
                        @users.each do |user|
                          color = "#000000"
                          if @gms.include? user.id
                            color = "#ee0000"
                          end
                      %>
                        <tr>
                          <td align="center" style="border-bottom: 1px solid #cccccc;"><%= user.id %></td>
                          <td style="border-bottom: 1px solid #cccccc;color: <%= color %>"><%= user.name %></td>
                          <td align="center" style="border-bottom: 1px solid #cccccc;"><%= user.creatime.to_s[0..18] %></td>
                        </tr>
                      <% end %>
                      </tbody>
                    </table>
                  </div>
                </td>
              </tr>
              </tbody>
            </table>

          </td>
        </tr>

        </tbody>
      </table>

    </td>
  </tr>
</table>
