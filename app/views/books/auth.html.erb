<style type="text/css">

    select {
        height: 36px;
        min-width: 170px;
        text-indent: 4px;
        margin-bottom: 15px;
    }

    .text_tag {
        /*display: block;*/
        width: 50%;
        height: 54px;
        padding: 6px 12px;
        font-size: 14px;
        line-height: 1.42857143;
        color: #555;
        background-color: #fff;
        background-image: none;
        border: 1px solid #ccc;
        border-radius: 4px;
        -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075);
        box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075);
        -webkit-transition: border-color ease-in-out .15s, -webkit-box-shadow ease-in-out .15s;
        -o-transition: border-color ease-in-out .15s, box-shadow ease-in-out .15s;
        transition: border-color ease-in-out .15s, box-shadow ease-in-out .15s;
    }

</style>


<main id="site-main">
  <div style="padding-top: 200px;text-align: center;">

    <%= form_tag('/books/auth', method: :post, remote: true) do %>
      <%= token_tag %>
      <%= text_field_tag 'auth_code', nil, required: true, :placeholder => '请输入验证码', :class => 'text_tag', required: true %>
      <br>
      <br>
      <div style="text-align: center">
        <%= submit_tag '提交', :class => 'btn btn-primary' %>
      </div>

    <% end %>


  </div>

</main>













