<p style="color: green"><%= notice %></p>



  <% @posts.each do |post| %>
    <div class="post-container">
      <div class="post-title"><%= link_to post.title, post %></div>
      <div class="post-common">小明</div>
      <div class="post-date"><%= time_tag post.created_at, "data-local": "time-ago" %></div>
    </div>
  <% end %>
<%= paginate @posts %>
<%= link_to "New post", new_post_path %>
