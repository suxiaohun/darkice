<style type="text/css">

  #main-table td {
    text-align: left;
    text-indent: 20px;
    line-height: 30px;
  }

  input[type='checkbox'], input[type='radio'] {
    height: 30px;
    width: 30px;
    zoom:101%;
  }

  .checkbox_text {
    /*color: forestgreen;*/
    font-size: 24px;
    line-height: 30px;
    vertical-align: top;
    padding-left: 10px;
  }

  .ssr_text {
    color: rgb(232, 112, 30);
    font-size: 24px;
    line-height: 30px;
    padding-left: 10px;
  }

  .sp_text {
    color: rgb(248, 45, 58);
    font-size: 24px;
    line-height: 30px;
    padding-left: 10px;
  }

  .sj_text {
    color: rgb(248, 45, 58);
    font-size: 24px;
    line-height: 50px;
    vertical-align: top;
    padding-left: 10px;
  }

  .hd_text {
    color: blue;
    font-size: 24px;
    line-height: 50px;
    vertical-align: top;
    padding-left: 10px;
    font-weight: bold;
  }


  .text_tag {
    width: 150px;
    height: 54px;
    padding: 6px 12px;
    font-size: 30px;
    line-height: 1.42857143;
    color: #555;
    background-color: #fff;
    background-image: none;
    border: 1px solid #ccc;
    border-radius: 4px;
    -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075);
    box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075);
    -webkit-transition: border-color ease-in-out .15s, -webkit-box-shadow ease-in-out .15s;
    -o-transition: border-color ease-in-out .15s, box-shadow ease-in-out .15s;
    transition: border-color ease-in-out .15s, box-shadow ease-in-out .15s;
  }

  .mode-label {
    padding: 5px 5px;
    border: 1px solid darkgray;
    border-radius: 5px;
    display: inline-table;
    min-width: 140px;
    vertical-align: middle;
  }

  .check {
    background: #e8d811;
  }

  .uncheck {
    background: darkgray;
  }

  .mode-label > input[type='checkbox'] {
    vertical-align: bottom;
  }

  .tips {
    color: blue;
  }

  .main-li {
    list-style: none;
  }

  .hd-text{
    margin-left: 42px;
    color: blue;
    font-size: 24px;
    font-weight: bolder;
  }

