<style type="text/css">
  .text_tag {
    /*display: block;*/
    width: 50%;
    height: 54px;
    padding: 6px 12px;
    font-size: 14px;
    line-height: 1.42857143;
    color: #555;
    background-color: #fff;
    background-image: none;
    border: 1px solid #ccc;
    border-radius: 4px;
    -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075);
    box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075);
    -webkit-transition: border-color ease-in-out .15s, -webkit-box-shadow ease-in-out .15s;
    -o-transition: border-color ease-in-out .15s, box-shadow ease-in-out .15s;
    transition: border-color ease-in-out .15s, box-shadow ease-in-out .15s;
  }

</style>



<div style="padding-top: 200px;text-align: center;">
  <span style="color: red;"><%= flash[:alert] %></span>
  <%= form_tag(fates_auth_path, method: :post) do %>
    <%= password_field_tag :password, nil, :placeholder => 'please type the password', :class => 'text_tag', required: true %>
    <br>
    <br>
    <div style="text-align: center">
      <%= submit_tag :submit, :class => 'btn btn-primary' %>
    </div>

  <% end %>


</div>












