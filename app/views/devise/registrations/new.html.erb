<div>
  <h2><%= t('login.sign_up') %></h2>


  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label t('login.email'), class: 'common-label'%>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label t('login.password'), class: 'common-label' %>
      <%= f.password_field :password, autocomplete: "new-password" %>    <% if @minimum_password_length %>
        <em>(<%= t('login.minimum_password_length',length: @minimum_password_length) %> )</em>
      <% end %>
    </div>

    <div class="field">
      <%= f.label t('login.password_confirmation'), class: 'common-label' %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="actions">
      <%= f.submit t('login.sign_up') %>
    </div>
  <% end %>
  <br>

  <%= render "devise/shared/links" %>

</div>

