        padding: 10px 12px;
        margin-bottom: 5px;
        width: auto;
        display: table;
    }

    .drop {
        margin: 5px 5px;
    }

    .drop + input + span {
        display: inline-block;
    }

    .drop + input:checked + span {
        display: none;
    }

    .SendDataArea {
        width: 1016px;
        height: 200px;
